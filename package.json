{
  "name": "detliar",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "run-all": "concurrently \"npm run server\" \"npm run client\"",
    "client-pull": "cd ./client && pnpm i && pnpm run build",
    "server": "cd ./server && npm run dev",
    "client": "cd ./client && pnpm run dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}

name: Deploy to VPS

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    - name: Install dependencies
      run: npm run client-pull

    - name: Deploy to VPS
      uses: ssh-actions/ssh-deploy@v1
      with:
       
        target: /var/www/detliar/server
        command: pm2 restart 3 --update-env

